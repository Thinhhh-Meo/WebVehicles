@model List<MotorcycleShop.Models.Feedback>

@{
    ViewData["Title"] = "My Feedbacks";
}

<div class="container mt-5">
    <h2 class="text-white mb-4">
        <i class="fas fa-comment-dots text-danger"></i> My Feedbacks
    </h2>

    @if (!Model.Any())
    {
        <div class="dark-card text-center">
            <i class="fas fa-comment-slash fa-2x mb-3"></i>
            <p>You haven't submitted any feedback yet.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var f in Model)
            {
                <div class="col-lg-6">
                    <div class="dark-card h-100">
                        <div class="d-flex justify-content-between mb-2">
                            <div>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="@(i <= f.Rating ? "fas" : "far") fa-star text-warning"></i>
                                }
                            </div>
                            <small class="text-muted">
                                @f.CreatedDate.ToString("dd/MM/yyyy")
                            </small>
                        </div>

                        <p class="mb-3">@f.Description</p>

                        @if (f.Product != null)
                        {
                            <div class="d-flex align-items-center border-top pt-3">
                                <img src="@f.Product.ImageUrl"
                                     style="width:60px;height:45px;object-fit:cover;border-radius:8px">
                                <div class="ms-3">
                                    <strong>@f.Product.Name</strong><br />
                                    <small class="text-muted">@f.Product.BrandName</small>
                                </div>
                            </div>
                        }

                        <form method="post"
                              action="@Url.Action("Delete", new { id = f.FeedbackId })"
                              class="mt-3 text-end">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('Delete this feedback?')">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .dark-card {
        background: #151515;
        border-radius: 18px;
        padding: 24px;
        color: #fff;
        box-shadow: 0 0 0 1px rgba(255,255,255,.06);
    }
</style>
