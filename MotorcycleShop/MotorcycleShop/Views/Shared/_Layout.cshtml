<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Motorcycle Shop</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MotorcycleShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">


    @RenderSection("Styles", required: false)

    <style>
        /* ===== GLOBAL ===== */
        body {
            font-family: 'Segoe UI', sans-serif;
            background: #0f0f0f;
            color: #eaeaea;
        }

        a {
            text-decoration: none;
        }

        /* ===== NAVBAR ===== */
        .navbar {
            background: linear-gradient(135deg, #000, #1a1a1a);
            padding: 14px 0;
        }

        .navbar-brand {
            font-weight: 900;
            font-size: 1.3rem;
            color: #fff !important;
            letter-spacing: 1px;
        }

            .navbar-brand i {
                color: #c00000;
                margin-right: 6px;
            }

        .nav-link {
            color: #ccc !important;
            font-weight: 500;
            margin-right: 8px;
            transition: .3s;
        }

            .nav-link:hover {
                color: #fff !important;
                transform: translateY(-1px);
            }

        /* Cart badge */
        #cartCount {
            font-size: .7rem;
            padding: 4px 7px;
            margin-left: 5px;
        }

        /* ===== ACCOUNT DROPDOWN ===== */
        .dropdown-toggle {
            border-radius: 30px;
            padding: 6px 18px;
            font-weight: 600;
        }

        .dropdown-menu {
            background: #1a1a1a;
            border-radius: 14px;
            padding: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,.6);
        }

        .dropdown-item {
            color: #ddd;
            border-radius: 8px;
            padding: 8px 12px;
            transition: .2s;
        }

            .dropdown-item i {
                width: 20px;
            }

            .dropdown-item:hover {
                background: #2a2a2a;
                color: #fff;
            }

        /* ===== MAIN ===== */
        main {
            min-height: 72vh;
            padding: 30px 0;
        }

        /* ===== FOOTER ===== */
        footer {
            background: #0a0a0a;
            color: #aaa;
            font-size: .9rem;
            padding: 16px 0;
        }

            footer a {
                color: #c00000;
                font-weight: 500;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>
    <!-- ===== HEADER ===== -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-motorcycle"></i> MOTORCYCLE SHOP
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- LEFT MENU -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-house"></i> Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">
                                <i class="fas fa-store"></i> Products
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-cart-shopping"></i> Cart
                                <span class="badge bg-danger" id="cartCount">0</span>
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Order" asp-action="MyOrders">
                                    <i class="fas fa-box"></i> My Orders
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- RIGHT MENU -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <button class="btn btn-outline-light dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="fas fa-user"></i> Account
                            </button>

                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                        <i class="fas fa-user-circle"></i> My Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Order" asp-action="MyOrders">
                                        <i class="fas fa-box"></i> My Orders
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Feedback" asp-action="MyFeedbacks">
                                        <i class="fas fa-comment"></i> My Feedbacks
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Discount" asp-action="Available">
                                        <i class="fas fa-tag"></i> My Discount
                                    </a>
                                </li>

                                @if (User.IsInRole("Admin"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                            <i class="fas fa-screwdriver-wrench"></i> Admin Panel
                                        </a>
                                    </li>
                                }

                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-area="Identity"
                                          asp-page="/Account/Logout"
                                          asp-route-returnUrl="@Url.Action("Index", "Home")">
                                        <button class="dropdown-item">
                                            <i class="fas fa-right-from-bracket"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fas fa-right-to-bracket"></i> Login
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- ===== MAIN ===== -->
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- ===== FOOTER ===== -->
    <footer class="text-center">
        <div class="container">
            &copy; 2025 Motorcycle Shop ·
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function updateCartCount() {
            $.get('@Url.Action("GetCartCount", "Cart")', function (count) {
                $('#cartCount').text(count);
            });
        }

        $(document).ready(function () {
            updateCartCount();
            $('form[action*="/Cart/Add"]').submit(function () {
                setTimeout(updateCartCount, 500);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({ duration: 900, once: true });
    </script>

</body>
</html>
