@model MotorcycleShop.Models.Order
@using System.Globalization

@{
    ViewData["Title"] = $"Order #{Model.OrderId}";
}

<div class="container mt-5">
    <h2 class="text-white mb-4">
        <i class="fas fa-receipt text-danger"></i> Order Details
    </h2>

    <div class="dark-card mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-white">Order #@Model.OrderId</h4>
            <span class="badge @GetStatusBadgeClass(Model.Status)">
                @Model.Status
            </span>
        </div>

        <!-- Order Info -->
        <div class="order-info-box mb-4">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-2">
                        <i class="fas fa-calendar-alt text-danger me-2"></i>
                        <strong>Order Date:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-user text-danger me-2"></i>
                        <strong>Customer:</strong> @(Model.User?.UserName ?? "N/A")
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-phone text-danger me-2"></i>
                        <strong>Phone:</strong> @Model.PhoneNumber
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-2">
                        <i class="fas fa-credit-card text-danger me-2"></i>
                        <strong>Payment:</strong> @Model.PaymentMethod
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-map-marker-alt text-danger me-2"></i>
                        <strong>Address:</strong> @Model.ShippingAddress
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Discount?.Code))
                    {
                        <div class="mb-2">
                            <i class="fas fa-tag text-danger me-2"></i>
                            <strong>Discount Code:</strong>
                            <span class="badge bg-success">@Model.Discount.Code</span>
                        </div>
                    }
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Note))
            {
                <div class="mt-3 pt-3 border-top">
                    <i class="fas fa-sticky-note text-danger me-2"></i>
                    <strong>Note:</strong>
                    <span class="text-muted">@Model.Note</span>
                </div>
            }
        </div>

        <!-- Order Items -->
        <div class="table-responsive mb-4">
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th class="text-end">Price</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-end">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td>
                                <strong>@item.Product.Name</strong>
                                @if (!string.IsNullOrEmpty(item.Product.BrandName))
                                {
                                    <br />
                            
                                    <small class="text-muted">Brand: @item.Product.BrandName</small>
                                }
                            </td>
                            <td class="text-end">@item.UnitPrice.ToString("N0") đ</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">@((item.Quantity * item.UnitPrice).ToString("N0")) đ</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Price Summary Card -->
        <div class="dark-card p-3">
            <h5 class="mb-3">
                <i class="fas fa-credit-card text-danger"></i> Price Summary
            </h5>

            <div class="d-flex justify-content-between mb-2">
                <span>Subtotal:</span>
                <span>@Model.TotalPrice.ToString("N0") đ</span>
            </div>

            @if (Model.DiscountAmount > 0)
            {
                <div class="d-flex justify-content-between mb-2 text-success">
                    <span>Discount (@Model.Discount?.Code):</span>
                    <span>-@Model.DiscountAmount.ToString("N0") đ</span>
                </div>
            }

            <hr class="my-3" />

            <div class="d-flex justify-content-between fw-bold fs-5 text-danger">
                <span>Final Amount</span>
                <span>@Model.FinalPrice.ToString("N0") đ</span>
            </div>
        </div>
    </div>

    <a href="@Url.Action("MyOrders")" class="btn btn-outline-light">
        <i class="fas fa-arrow-left"></i> Back to My Orders
    </a>
</div>

<style>
    .dark-card {
        background: #151515;
        border-radius: 18px;
        padding: 24px;
        color: #fff;
        box-shadow: 0 0 0 1px rgba(255,255,255,.05);
        margin-bottom: 20px;
    }

    .order-info-box {
        background: #1e1e1e;
        border-radius: 14px;
        padding: 18px 22px;
        color: #f1f1f1;
        font-size: 15px;
        box-shadow: 0 0 0 1px rgba(255,255,255,.08);
    }

    .table-dark {
        background: #151515;
        border-radius: 10px;
        overflow: hidden;
    }

        .table-dark thead th {
            background: #dc3545;
            border: none;
            color: white;
            font-weight: 600;
            padding: 15px;
        }

        .table-dark tbody td {
            border-color: rgba(255,255,255,.1);
            padding: 12px 15px;
            vertical-align: middle;
        }

        .table-dark tbody tr:hover {
            background: rgba(255,255,255,.05);
        }

    .text-success {
        color: #28a745 !important;
    }

    .text-danger {
        color: #dc3545 !important;
    }

    .badge.bg-success {
        background-color: #28a745;
    }

</style>

@functions {
    string GetStatusBadgeClass(MotorcycleShop.Models.OrderStatus s) => s switch
    {
        MotorcycleShop.Models.OrderStatus.Pending => "bg-warning text-dark",
        MotorcycleShop.Models.OrderStatus.Confirmed => "bg-info",
        MotorcycleShop.Models.OrderStatus.Shipping => "bg-primary",
        MotorcycleShop.Models.OrderStatus.Delivered => "bg-success",
        MotorcycleShop.Models.OrderStatus.Cancelled => "bg-danger",
        _ => "bg-secondary"
    };
}
