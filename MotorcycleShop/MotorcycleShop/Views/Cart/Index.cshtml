@model MotorcycleShop.Controllers.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<!-- Main Layout Container -->
<div class="page-wrapper d-flex flex-column min-vh-100">
    <div class="container mt-5 flex-grow-1">
        <h2 class="mb-4 text-white">
            <i class="fas fa-shopping-cart text-danger me-2"></i> Shopping Cart
        </h2>

        @if (Model.Items == null || !Model.Items.Any())
        {
            <!-- EMPTY CART -->
            <div class="empty-cart-card text-center py-5">
                <i class="fas fa-cart-arrow-down fa-4x mb-4 text-danger"></i>
                <h4 class="mb-2">Your cart is empty</h4>
                <p class="text-muted mb-4">Looks like you haven't added anything yet.</p>

                <a href="@Url.Action("Index", "Products")"
                   class="btn btn-danger btn-lg px-5 py-2">
                    <i class="fas fa-motorcycle me-2"></i> Start Shopping
                </a>
            </div>
        }
        else
        {
            <div class="row g-4">
                <!-- CART ITEMS -->
                <div class="col-lg-8">
                    @foreach (var item in Model.Items)
                    {
                        <div class="cart-item-card mb-3">
                            <div class="row align-items-center">
                                <!-- IMAGE -->
                                <div class="col-3 col-md-2">
                                    <img src="@item.Product.ImageUrl"
                                         class="cart-item-img img-fluid rounded"
                                         alt="@item.Product.Name">
                                </div>

                                <!-- INFO -->
                                <div class="col-5 col-md-4">
                                    <h6 class="mb-1 fw-bold">@item.Product.Name</h6>
                                    <small class="text-muted d-block mb-2">@item.Product.BrandName</small>
                                    <div class="text-danger fw-bold">
                                        @item.Product.Price.ToString("N0") đ
                                    </div>
                                </div>

                                <!-- QUANTITY -->
                                <div class="col-7 col-md-3 mt-2 mt-md-0">
                                    <form method="post"
                                          action="@Url.Action("Update", "Cart")"
                                          class="d-flex align-items-center justify-content-start">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                        <input type="number"
                                               name="quantity"
                                               value="@item.Quantity"
                                               min="1"
                                               max="@item.Product.Quantity"
                                               class="form-control form-control-sm qty-input me-2">
                                        <button type="submit" class="btn btn-sm btn-outline-light">
                                            <i class="fas fa-sync-alt"></i>
                                        </button>
                                    </form>
                                </div>

                                <!-- TOTAL + REMOVE -->
                                <div class="col-5 col-md-3 text-end">
                                    <div class="fw-bold fs-5 text-danger mb-2">
                                        @((item.Quantity * item.Product.Price).ToString("N0")) đ
                                    </div>

                                    <form method="post"
                                          action="@Url.Action("Remove", "Cart")"
                                          class="d-inline-block">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash me-1"></i> Remove
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- ORDER SUMMARY -->
                <div class="col-lg-4">
                    <div class="order-summary-dark">
                        <h5 class="mb-4 pb-2 border-bottom border-secondary">
                            <i class="fas fa-receipt me-2"></i> Order Summary
                        </h5>

                        <div class="summary-row py-2">
                            <span class="text-muted">Subtotal</span>
                            <span class="fw-bold">@Model.TotalPrice.ToString("N0") đ</span>
                        </div>

                        <div class="summary-row py-2">
                            <span class="text-muted">Shipping</span>
                            <span class="text-success fw-bold">Free</span>
                        </div>

                        <hr class="my-3 border-secondary" />

                        <div class="summary-row total py-3 border-top border-secondary">
                            <span>Total</span>
                            <span>@Model.TotalPrice.ToString("N0") đ</span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <a href="@Url.Action("Checkout", "Order")"
                               class="btn btn-danger btn-lg py-3">
                                <i class="fas fa-credit-card me-2"></i> Proceed to Checkout
                            </a>

                            <a href="@Url.Action("Index", "Products")"
                               class="btn btn-outline-light btn-lg py-3">
                                <i class="fas fa-arrow-left me-2"></i> Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- FOOTER -->
    <footer class="footer mt-auto py-4 bg-dark border-top border-secondary">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <span class="text-muted">
                        © 2025 Motorcycle Shop - Privacy Policy | Terms of Service
                    </span>
                </div>
            </div>
        </div>
    </footer>
</div>

<style>
    /* PAGE LAYOUT */
    .page-wrapper {
        min-height: 100vh;
    }

    /* EMPTY CART */
    .empty-cart-card {
        background: linear-gradient(145deg, #111, #1b1b1b);
        padding: 80px 40px;
        border-radius: 20px;
        color: #fff;
        box-shadow: inset 0 0 40px rgba(255,255,255,0.03);
        border: 1px solid rgba(255,255,255,0.05);
    }

    /* CART ITEM */
    .cart-item-card {
        background: #1a1a1a;
        border-radius: 14px;
        padding: 20px;
        border: 1px solid rgba(255,255,255,0.05);
        transition: all 0.3s ease;
    }

        .cart-item-card:hover {
            border-color: rgba(255, 77, 79, 0.2);
            box-shadow: 0 5px 15px rgba(255, 77, 79, 0.1);
        }

    .cart-item-img {
        width: 100%;
        height: 100px;
        object-fit: cover;
        border-radius: 10px;
    }

    .qty-input {
        width: 80px;
        text-align: center;
        background: #2a2a2a;
        border: 1px solid rgba(255,255,255,0.1);
        color: white;
    }

        .qty-input:focus {
            background: #2a2a2a;
            color: white;
            border-color: #ff4d4f;
            box-shadow: 0 0 0 0.2rem rgba(255, 77, 79, 0.25);
        }

    /* ORDER SUMMARY */
    .order-summary-dark {
        background: linear-gradient(145deg, #111, #1b1b1b);
        padding: 28px;
        border-radius: 18px;
        color: #fff;
        border: 1px solid rgba(255,255,255,0.05);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        position: sticky;
        top: 100px;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .summary-row.total {
            font-size: 1.3rem;
            font-weight: 700;
            color: #ff4d4f;
        }

    /* FOOTER */
    .footer {
        background: #111 !important;
        margin-top: auto;
        border-top: 1px solid rgba(255, 255, 255, 0.1) !important;
    }

        .footer a {
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .footer a:hover {
                color: #ff4d4f !important;
            }

    /* RESPONSIVE ADJUSTMENTS */
    @@media (max-width: 768px) {
        .cart-item-card .row > div {
            margin-bottom: 10px;
        }

        .cart-item-img {
            height: 80px;
        }

        .empty-cart-card {
            padding: 50px 20px;
        }

        .order-summary-dark {
            padding: 20px;
            position: static;
            margin-bottom: 20px;
        }

        .footer {
            text-align: center;
        }

            .footer .footer-links {
                margin-top: 10px;
            }
    }
</style>