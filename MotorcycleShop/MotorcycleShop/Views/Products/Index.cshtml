@model List<MotorcycleShop.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<section class="section-dark">
    <div class="container">

        <h1 class="section-title mb-4">🏍 Motorcycles & Spare Parts</h1>

        <!-- FILTER -->
        <form method="get" class="filter-box mb-5">
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="search" class="form-control"
                           placeholder="Search products..."
                           value="@Context.Request.Query["search"]">
                </div>

                <div class="col-md-3">
                    <select name="category" class="form-select">
                        <option value="">All Categories</option>
                        <option value="Motorcycle">Motorcycles</option>
                        <option value="SparePart">Spare Parts</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <select name="brand" class="form-select">
                        <option value="">All Brands</option>
                        @foreach (var brand in ViewBag.Brands)
                        {
                            <option value="@brand">@brand</option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <button class="btn btn-danger w-100">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>
            </div>
        </form>

        <!-- PRODUCTS -->
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product-card">

                        <span class="type-badge
                                @(product.TypeProduct == ProductType.Motorcycle ? "badge-moto" : "badge-part")">
                            @product.TypeProduct
                        </span>

                        <div class="product-img">
                            <img src="@product.ImageUrl" alt="@product.Name" loading="lazy" />
                        </div>

                        <div class="product-body">
                            <h5>@product.Name</h5>
                            <p class="brand">@product.BrandName</p>

                            <p class="price">@product.Price.ToString("N0") đ</p>
                            <p class="stock">
                                @(product.Quantity > 0 ? $"Stock: {product.Quantity}" : "Out of stock")
                            </p>

                            <div class="d-flex gap-2">
                                <a asp-action="Details"
                                   asp-route-id="@product.ProductId"
                                   class="btn btn-outline-danger btn-sm w-100">
                                    View
                                </a>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <form method="post" asp-controller="Cart" asp-action="Add">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button class="btn btn-danger btn-sm"
                                                @(product.Quantity == 0 ? "disabled" : "")>
                                            <i class="fas fa-cart-plus"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-dark text-center mt-5">
                <i class="fas fa-search"></i> No products found
            </div>
        }
    </div>
</section>

<style>
    .section-dark {
        background: #0f0f0f;
        padding: 80px 0;
    }

    .section-title {
        color: #fff;
        font-weight: 900;
        text-align: center;
    }

    .filter-box {
        background: #1a1a1a;
        padding: 25px;
        border-radius: 18px;
    }

    .product-card {
        background: #1a1a1a;
        border-radius: 20px;
        overflow: hidden;
        transition: .4s;
        position: relative;
    }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 50px rgba(0,0,0,.8);
        }

    .type-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        padding: 5px 12px;
        font-size: .7rem;
        border-radius: 20px;
        font-weight: 700;
    }

    .badge-moto {
        background: #c00000;
        color: #fff;
    }

    .badge-part {
        background: #0066cc;
        color: #fff;
    }

    .product-img {
        height: 200px;
        background: #000;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .product-img img {
            max-height: 100%;
            max-width: 100%;
            object-fit: contain;
        }

    .product-body {
        padding: 18px;
        text-align: center;
    }

        .product-body h5 {
            color: #fff;
        }

    .brand {
        font-size: .85rem;
        color: #aaa;
    }

    .price {
        color: #ff4d4d;
        font-weight: 800;
    }

    .stock {
        font-size: .8rem;
        color: #888;
    }
</style>
