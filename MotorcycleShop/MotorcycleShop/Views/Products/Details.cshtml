@model MotorcycleShop.Models.Product

@{
    ViewData["Title"] = Model.Name;

    double avgRating = 0;
    int totalFeedback = 0;

    if (Model.Feedbacks != null && Model.Feedbacks.Any())
    {
        avgRating = Model.Feedbacks.Average(f => f.Rating);
        totalFeedback = Model.Feedbacks.Count();
    }
}

<section class="section-dark">
    <div class="container">
        <div class="row g-5">

            <!-- IMAGE -->
            <div class="col-md-6">
                <div class="detail-img">
                    <img src="@Model.ImageUrl" alt="@Model.Name" />
                </div>
            </div>

            <!-- INFO -->
            <div class="col-md-6 text-light">
                <h2 class="fw-bold">@Model.Name</h2>
                <p class="text-muted">Brand: <strong>@Model.BrandName</strong></p>

                <!-- AVERAGE RATING -->
                <div class="d-flex align-items-center mb-2">
                    <div class="text-warning me-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Round(avgRating))
                            {
                                <i class="fas fa-star"></i>
                            }
                            else
                            {
                                <i class="far fa-star"></i>
                            }
                        }
                    </div>
                    <span class="text-muted">
                        (@avgRating.ToString("0.0") / 5 – @totalFeedback reviews)
                    </span>
                </div>

                <h3 class="price">@Model.Price.ToString("N0") đ</h3>
                <p class="stock">Stock: @Model.Quantity</p>

                <p class="mt-3">@Model.Description</p>

                <!-- SPEC -->
                @if (Model.Motorcycle != null)
                {
                    <div class="spec-box">
                        <h5>Motorcycle Specs</h5>
                        <ul>
                            <li>Engine: @Model.Motorcycle.Displacement cc</li>
                            <li>Fuel: @Model.Motorcycle.FuelCapacity L</li>
                            <li>Weight: @Model.Motorcycle.Weight kg</li>
                            <li>Color: @Model.Motorcycle.Color</li>
                        </ul>
                    </div>
                }
                else if (Model.SparePart != null)
                {
                    <div class="spec-box">
                        <h5>Spare Part Info</h5>
                        <ul>
                            <li>Name: @Model.SparePart.SpareName</li>
                            <li>Category: @Model.SparePart.Category</li>
                            <li>Compatible: @Model.SparePart.CompatibleWith</li>
                        </ul>
                    </div>
                }

                <!-- ADD TO CART -->
                <div class="mt-4">
                    @if (Model.Quantity > 0)
                    {
                        <form method="post" asp-controller="Cart" asp-action="Add">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@Model.ProductId" />
                            <input type="hidden" name="quantity" value="1" />

                            <button class="btn btn-danger btn-lg w-100">
                                <i class="fas fa-cart-plus"></i> Add to Cart
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            Out of Stock
                        </div>
                    }
                </div>

                <!-- FEEDBACK LIST -->
                <div class="spec-box mt-5">
                    <h5>User Feedback</h5>

                    @if (Model.Feedbacks != null && Model.Feedbacks.Any())
                    {
                        foreach (var fb in Model.Feedbacks.OrderByDescending(f => f.CreatedDate))
                        {
                            <div class="border-bottom pb-2 mb-3">
                                <strong>@fb.User?.UserName</strong>

                                <div class="text-warning">
                                    @for (int i = 0; i < fb.Rating; i++)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                </div>

                                <p class="mb-1">@fb.Description</p>
                                <small class="text-muted">
                                    @fb.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No feedback yet.</p>
                    }
                </div>

                <!-- WRITE FEEDBACK -->
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="spec-box mt-4">
                        <h5>Write your feedback</h5>

                        <form asp-controller="Feedback" asp-action="Create" method="post">
                            @Html.AntiForgeryToken()

                            <input type="hidden" name="ProductId" value="@Model.ProductId" />

                            <!-- STAR CLICK -->
                            <div class="mb-3">
                                <label class="form-label">Your Rating</label>
                                <div class="star-rating">
                                    @for (int i = 5; i >= 1; i--)
                                    {
                                        <input type="radio" id="star-@i" name="Rating" value="@i" required />
                                        <label for="star-@i">
                                            <i class="fas fa-star"></i>
                                        </label>
                                    }
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Feedback</label>
                                <textarea name="Description"
                                      class="form-control"
                                      rows="4"
                                      maxlength="1000"
                                      required></textarea>
                            </div>

                            <button class="btn btn-outline-light w-100">
                                Submit Feedback
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mt-4">
                        Please login to write feedback.
                    </div>
                }

            </div>
        </div>
    </div>
</section>

<style>
    .detail-img {
        background: #000;
        border-radius: 25px;
        padding: 30px;
        display: flex;
        justify-content: center;
    }

        .detail-img img {
            max-height: 450px;
            max-width: 100%;
            object-fit: contain;
        }

    .price {
        color: #ff4d4d;
        font-weight: 900;
    }

    .stock {
        font-size: .85rem;
        color: #aaa;
    }

    .spec-box {
        background: #1a1a1a;
        border-radius: 18px;
        padding: 20px;
        margin-top: 25px;
    }

        .spec-box h5 {
            color: #fff;
        }

        .spec-box li {
            color: #ccc;
            margin-bottom: 6px;
        }

    /* STAR RATING */
    .star-rating {
        direction: rtl;
        display: inline-flex;
        font-size: 1.8rem;
    }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            color: #444;
            cursor: pointer;
            transition: color .2s;
        }

            .star-rating label:hover,
            .star-rating label:hover ~ label {
                color: #ffc107;
            }

        .star-rating input:checked ~ label {
            color: #ffc107;
        }
</style>
