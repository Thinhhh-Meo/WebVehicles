@model MotorcycleShop.Models.ViewModels.EditProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-5">
    <h2 class="text-white mb-4">
        <i class="fas fa-user-edit text-danger"></i> Edit Profile
    </h2>

    <div class="row g-4">
        <div class="col-lg-8">
            <form asp-action="EditProfile" method="post" class="dark-card">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control dark-input" />
                </div>

                <div class="mb-3">
                    <label>Email</label>
                    <input class="form-control dark-input" value="@Model.Email" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control dark-input" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Age"></label>
                        <input asp-for="Age" type="number" class="form-control dark-input" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="AvatarUrl"></label>
                        <input asp-for="AvatarUrl" class="form-control dark-input" />
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Address"></label>
                    <textarea asp-for="Address" rows="3" class="form-control dark-input"></textarea>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Profile" class="btn btn-outline-light">Cancel</a>
                    <button class="btn btn-danger">Save Changes</button>
                </div>
            </form>
        </div>

        <div class="col-lg-4">
            <div class="dark-card text-center">
                <h5 class="mb-3">Avatar Preview</h5>
                @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                {
                    <img src="@Model.AvatarUrl"
                         class="rounded-circle"
                         style="width:150px;height:150px;object-fit:cover">
                }
                else
                {
                    <div class="avatar-placeholder">
                        <i class="fas fa-user"></i>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
