@model MotorcycleShop.Models.Brand
@{
    ViewData["Title"] = "Edit Brand";
    ViewData["Controller"] = "Brand";
    ViewData["Action"] = "Edit";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="h3 mb-0"><i class="fas fa-edit me-2"></i>@ViewData["Title"]</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Brands</a></li>
                    <li class="breadcrumb-item active">@Model.Name</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Brand Form -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-tags me-2"></i>Edit Brand Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editBrandForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="BrandId" />

                        <div class="row">
                            <!-- Current Logo -->
                            <div class="col-md-12 mb-3">
                                <label class="form-label">Current Logo</label>
                                @if (!string.IsNullOrEmpty(Model.LogoUrl))
                                {
                                    <div class="current-logo mb-3">
                                        <img src="@Model.LogoUrl" alt="@Model.Name logo" class="img-thumbnail" style="max-height: 100px;">
                                        <div class="form-text mt-2">
                                            <a href="@Model.LogoUrl" target="_blank" class="small me-3">
                                                <i class="fas fa-external-link-alt me-1"></i>View Full Size
                                            </a>
                                            <a href="#" class="small text-danger" id="removeLogoBtn">
                                                <i class="fas fa-trash me-1"></i>Remove Logo
                                            </a>
                                        </div>
                                    </div>
                                    <input type="hidden" name="currentLogoUrl" value="@Model.LogoUrl" />
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle me-2"></i>No logo currently set for this brand
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="row">
                            <!-- Brand Name -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Brand Name *</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <!-- Country -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Country" class="form-label">Country of Origin</label>
                                <input asp-for="Country" class="form-control" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <!-- Established Year -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="EstablishedYear" class="form-label">Established Year</label>
                                <input asp-for="EstablishedYear" class="form-control" type="date"
                                       value="@Model.EstablishedYear.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="EstablishedYear" class="text-danger"></span>
                            </div>

                            <!-- New Logo Upload -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Upload New Logo (Optional)</label>
                                <input type="file" name="logoFile" class="form-control" accept="image/*" id="logoUpload" />
                                <small class="form-text text-muted">Leave empty to keep current logo</small>
                            </div>
                        </div>

                        <!-- Logo Preview for New Upload -->
                        <div class="mb-3">
                            <label class="form-label">New Logo Preview</label>
                            <div class="logo-preview-container">
                                <div class="logo-preview" id="logoPreview">
                                    <div class="logo-placeholder">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                        <p class="mt-2">No new logo selected</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" id="isActiveSwitch">
                                <label class="form-check-label" for="isActiveSwitch">
                                    <strong>Active Brand</strong>
                                </label>
                            </div>
                            <small class="form-text text-muted">Brand will be available for product selection when active</small>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                    <i class="fas fa-arrow-left me-2"></i>Cancel
                                </a>
                                <form asp-action="Delete" asp-route-id="@Model.BrandId" method="post"
                                      style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger"
                                            onclick="return confirm('Are you sure you want to delete this brand?');">
                                        <i class="fas fa-trash me-2"></i>Delete
                                    </button>
                                </form>
                            </div>
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Brand Statistics -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Brand Statistics</h5>
                </div>
                <div class="card-body">
                    @{
                        var productCount = Model.Products?.Count ?? 0;
                        var activeProducts = Model.Products?.Count(p => p.IsActive) ?? 0;
                    }
                    <div class="row text-center">
                        <div class="col-6 border-end">
                            <div class="display-6">@productCount</div>
                            <small class="text-muted">Total Products</small>
                        </div>
                        <div class="col-6">
                            <div class="display-6">@activeProducts</div>
                            <small class="text-muted">Active Products</small>
                        </div>
                    </div>
                    <hr>
                    <div class="mt-3">
                        <h6><i class="fas fa-info-circle me-2"></i>Brand Status</h6>
                        @if (!Model.IsActive)
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                This brand is inactive. Products under this brand won't be visible to customers.
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle me-2"></i>
                                This brand is active and visible to customers.
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Product", new { brand = Model.Name })"
                           class="btn btn-outline-primary">
                            <i class="fas fa-box me-2"></i>View Products
                        </a>
                        <button type="button" class="btn btn-outline-info" id="toggleStatusBtn">
                            <i class="fas fa-toggle-on me-2"></i>
                            @(Model.IsActive ? "Deactivate" : "Activate") Brand
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .current-logo {
            text-align: center;
        }

            .current-logo img {
                max-width: 200px;
                border-radius: 8px;
            }

        .logo-preview-container {
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            padding: 20px;
            text-align: center;
            background: #f8f9fa;
        }

        .logo-preview {
            min-height: 150px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .logo-placeholder {
            color: #6c757d;
        }

        #logoPreview img {
            max-width: 200px;
            max-height: 150px;
            border-radius: 6px;
        }

        .display-6 {
            font-size: 2.5rem;
            font-weight: 300;
            line-height: 1.2;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Logo preview for new upload
            $('#logoUpload').change(function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();

                    reader.onload = function(e) {
                        $('#logoPreview').html(`<img src="${e.target.result}" alt="Logo Preview" class="img-fluid">`);
                    }

                    reader.readAsDataURL(file);
                } else {
                    $('#logoPreview').html(`
                        <div class="logo-placeholder">
                            <i class="fas fa-image fa-3x text-muted"></i>
                            <p class="mt-2">No new logo selected</p>
                        </div>
                    `);
                }
            });

            // Remove current logo
            $('#removeLogoBtn').click(function(e) {
                e.preventDefault();

                Swal.fire({
                    title: 'Remove Logo?',
                    text: 'Are you sure you want to remove the current brand logo?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, Remove It',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $('.current-logo').remove();
                        $('input[name="currentLogoUrl"]').remove();
                        $('.current-logo-section').html(`
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>Logo removed. Upload new logo or brand will have no logo.
                            </div>
                        `);
                    }
                });
            });

            // Toggle status button
            $('#toggleStatusBtn').click(function() {
                const action = $(this).text().includes('Deactivate') ? 'deactivate' : 'activate';

                Swal.fire({
                    title: `Confirm ${action}`,
                    text: `Are you sure you want to ${action} this brand?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: `Yes, ${action}`,
                    cancelButtonText: 'Cancel',
                    showLoaderOnConfirm: true,
                    preConfirm: () => {
                        return $.ajax({
                            url: '@Url.Action("ToggleStatus", "Brand")',
                            type: 'POST',
                            data: { id: @Model.BrandId },
                            headers: {
                                'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                            }
                        }).then(response => {
                            if (!response.success) {
                                throw new Error('Failed to update status');
                            }
                            return response;
                        });
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: 'Success!',
                            text: `Brand has been ${action}d successfully.`,
                            icon: 'success',
                            timer: 1500,
                            showConfirmButton: false
                        }).then(() => {
                            location.reload();
                        });
                    }
                });
            });

            // Form submission
            $('#editBrandForm').submit(function(e) {
                // Validate established year
                const establishedYear = new Date($('#EstablishedYear').val()).getFullYear();
                const currentYear = new Date().getFullYear();

                if (establishedYear > currentYear) {
                    e.preventDefault();
                    Swal.fire('Error', 'Established year cannot be in the future', 'error');
                    return false;
                }

                if (establishedYear < 1800) {
                    e.preventDefault();
                    Swal.fire('Error', 'Please enter a valid established year', 'error');
                    return false;
                }

                // Show loading
                $('#submitBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Saving...');
            });
        });
    </script>
}