<div class="top-header">
    <div class="page-title">
        <h1>@ViewData["Title"]</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Dashboard">Admin</a></li>
                @if (!string.IsNullOrEmpty(ViewData["Controller"]?.ToString()))
                {
                    <li class="breadcrumb-item">@ViewData["Controller"]</li>
                }
                @if (!string.IsNullOrEmpty(ViewData["Action"]?.ToString()))
                {
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Action"]</li>
                }
            </ol>
        </nav>
    </div>

    <div class="user-info">
        <button class="btn btn-outline-primary d-md-none" onclick="toggleSidebar()">
            <i class="fas fa-bars"></i>
        </button>
        <div class="user-avatar">
            @User.Identity?.Name?[0]
        </div>
        <div class="user-details">
            <strong>@User.Identity?.Name</strong>
            <div class="text-muted small">Administrator</div>
        </div>
    </div>
</div>