@* Areas/Admin/Views/Dashboard/Login.cshtml *@
@model MotorcycleShop.Areas.Admin.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Admin Login";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-dark text-white text-center">
                    <h4>
                        <i class="fas fa-user-shield"></i> Admin Login
                    </h4>
                </div>

                <div class="card-body">
                    <form asp-area="Admin"
                          asp-controller="Account"
                          asp-action="Login"
                          method="post">

                        <input type="hidden" asp-for="ReturnUrl" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email"
                                   class="form-control"
                                   placeholder="admin@motorshop.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password"
                                   type="password"
                                   class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Login
                            </button>
                        </div>
                    </form>

                    <hr />

                    <div class="text-center mt-3">
                        <p class="text-muted">
                            <strong>Test Account:</strong><br />
                            Email: <code>admin@motorshop.com</code><br />
                            Password: <code>Admin@123</code>
                        </p>

                        <p class="mt-2">
                            <a href="@Url.Action("Login", "Account", new { area = "" })"
                               class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-user"></i> User Login
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
