@* Areas/Admin/Views/Dashboard/Index.cshtml *@
@model MotorcycleShop.Areas.Admin.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center py-3 mb-4 border-bottom">
        <h1 class="h2 mb-0">
            <i class="bi bi-speedometer2 text-primary me-2"></i>Dashboard
        </h1>
        <div class="d-flex align-items-center gap-2">
            <span class="badge bg-success">
                <i class="bi bi-person-circle me-1"></i>@User.Identity?.Name
            </span>
            <button class="btn btn-sm btn-outline-secondary" onclick="refreshDashboard()">
                <i class="bi bi-arrow-clockwise"></i> Refresh
            </button>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <!-- Revenue Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Total Revenue</h6>
                            <h2 class="mb-0">@Model.TotalRevenue.ToString("C")</h2>
                            <small class="opacity-75">Lifetime</small>
                        </div>
                        <i class="bi bi-currency-dollar display-6 opacity-50"></i>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-white text-primary">
                            <i class="bi bi-calendar-month me-1"></i>This Month: @Model.MonthlyRevenue.ToString("C")
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Total Orders</h6>
                            <h2 class="mb-0">@Model.TotalOrders</h2>
                            <small class="opacity-75">Lifetime</small>
                        </div>
                        <i class="bi bi-cart-check display-6 opacity-50"></i>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-white text-success">
                            <i class="bi bi-calendar-month me-1"></i>This Month: @Model.MonthlyOrders
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Total Products</h6>
                            <h2 class="mb-0">@Model.TotalProducts</h2>
                            <small class="opacity-75">In Stock</small>
                        </div>
                        <i class="bi bi-bicycle display-6 opacity-50"></i>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-white text-info">
                            <i class="bi bi-exclamation-triangle me-1"></i>Low Stock: @Model.LowStockProducts.Count
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Users Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Total Users</h6>
                            <h2 class="mb-0">@Model.TotalUsers</h2>
                            <small class="opacity-75">Registered</small>
                        </div>
                        <i class="bi bi-people display-6 opacity-50"></i>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-white text-warning">
                            <i class="bi bi-person-plus me-1"></i>Customers
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Status Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-2 col-6">
            <div class="card border-warning">
                <div class="card-body text-center py-3">
                    <h6 class="text-warning mb-1">Pending</h6>
                    <h3 class="mb-0">@Model.PendingOrders</h3>
                    <small class="text-muted">Orders</small>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-6">
            <div class="card border-info">
                <div class="card-body text-center py-3">
                    <h6 class="text-info mb-1">Confirmed</h6>
                    <h3 class="mb-0">@Model.ConfirmedOrders</h3>
                    <small class="text-muted">Orders</small>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-6">
            <div class="card border-primary">
                <div class="card-body text-center py-3">
                    <h6 class="text-primary mb-1">Shipping</h6>
                    <h3 class="mb-0">@Model.ShippingOrders</h3>
                    <small class="text-muted">Orders</small>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-6">
            <div class="card border-success">
                <div class="card-body text-center py-3">
                    <h6 class="text-success mb-1">Delivered</h6>
                    <h3 class="mb-0">@Model.DeliveredOrders</h3>
                    <small class="text-muted">Orders</small>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-6">
            <div class="card border-danger">
                <div class="card-body text-center py-3">
                    <h6 class="text-danger mb-1">Cancelled</h6>
                    <h3 class="mb-0">@Model.CancelledOrders</h3>
                    <small class="text-muted">Orders</small>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-6">
            <div class="card border-secondary">
                <div class="card-body text-center py-3">
                    <h6 class="text-secondary mb-1">All</h6>
                    <h3 class="mb-0">@Model.TotalOrders</h3>
                    <small class="text-muted">Orders</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts and Low Stock Row -->
    <div class="row g-4 mb-4">
        <!-- Sales Chart -->
        <div class="col-xl-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Sales Overview</h5>
                    <select class="form-select form-select-sm w-auto" id="chartPeriod">
                        <option value="7">Last 7 Days</option>
                        <option value="30" selected>Last 30 Days</option>
                        <option value="90">Last 90 Days</option>
                    </select>
                </div>
                <div class="card-body">
                    <canvas id="salesChart" style="height: 300px;"></canvas>
                </div>
            </div>
        </div>

        <!-- Low Stock Products -->
        <div class="col-xl-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle text-danger me-2"></i>Low Stock Alert</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @if (Model.LowStockProducts.Any())
                        {
                            @foreach (var product in Model.LowStockProducts)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@product.Name</h6>
                                            <small class="text-muted">SKU: @product.TypeProduct</small>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-@GetStockLevelBadge(product.Quantity)">
                                                @product.Quantity left
                                            </span>
                                            <div class="text-primary fw-bold mt-1">@product.Price.ToString("C")</div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="list-group-item text-center py-4">
                                <i class="bi bi-check-circle text-success display-4"></i>
                                <p class="mt-2 mb-0">All products have sufficient stock</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Recent Orders</h5>
                    <a asp-controller="Order" asp-action="Index" class="btn btn-sm btn-outline-primary">
                        View All <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Payment</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentOrders.Any())
                                {
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td>#@order.OrderId</td>
                                            <td>@order.User?.FullName</td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td class="fw-bold">@order.FinalPrice.ToString("C")</td>
                                            <td>
                                                <span class="badge bg-secondary">
                                                    @order.PaymentMethod
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-@GetStatusBadgeColor(order.Status)">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderId"
                                                   class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-4">
                                            <i class="bi bi-cart-x display-4 text-muted"></i>
                                            <p class="mt-2 mb-0">No recent orders</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="row mt-4 g-3">
        <div class="col-md-3 col-6">
            <a asp-controller="Product" asp-action="Index" class="text-decoration-none">
                <div class="card border-primary hover-shadow text-center h-100">
                    <div class="card-body py-4">
                        <i class="bi bi-bicycle text-primary display-4"></i>
                        <h5 class="card-title mt-3">Products</h5>
                        <p class="card-text text-muted small">Manage inventory</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3 col-6">
            <a asp-controller="Order" asp-action="Index" class="text-decoration-none">
                <div class="card border-success hover-shadow text-center h-100">
                    <div class="card-body py-4">
                        <i class="bi bi-cart-check text-success display-4"></i>
                        <h5 class="card-title mt-3">Orders</h5>
                        <p class="card-text text-muted small">Process orders</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3 col-6">
            <a asp-controller="User" asp-action="Index" class="text-decoration-none">
                <div class="card border-info hover-shadow text-center h-100">
                    <div class="card-body py-4">
                        <i class="bi bi-people text-info display-4"></i>
                        <h5 class="card-title mt-3">Users</h5>
                        <p class="card-text text-muted small">Manage accounts</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3 col-6">
            <a asp-controller="Report" asp-action="Index" class="text-decoration-none">
                <div class="card border-warning hover-shadow text-center h-100">
                    <div class="card-body py-4">
                        <i class="bi bi-graph-up text-warning display-4"></i>
                        <h5 class="card-title mt-3">Reports</h5>
                        <p class="card-text text-muted small">View analytics</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Refresh dashboard function
    function refreshDashboard() {
        location.reload();
    }

        // Helper functions
    @functions {
            public string GetStatusBadgeColor(OrderStatus status)
            {
                    return status switch
                    {
                            OrderStatus.Pending => "warning",
                            OrderStatus.Confirmed => "info",
                            OrderStatus.Shipping => "primary",
                            OrderStatus.Delivered => "success",
                            OrderStatus.Cancelled => "danger",
                            _ => "secondary"
                    };
            }

            public string GetStockLevelBadge(int stock)
            {
                    if (stock <= 3) return "danger";
                    if (stock <= 5) return "warning";
                    if (stock <= 10) return "info";
                    return "success";
            }
    }

    // Initialize sales chart
    let salesChart = null;

    document.addEventListener('DOMContentLoaded', function() {
        loadChart(30); // default 30 days

        // Period change handler
        document.getElementById('chartPeriod').addEventListener('change', function() {
            loadChart(parseInt(this.value));
        });

        // Load order status chart
        loadOrderStatusChart();
    });

    function loadChart(days) {
        fetch(`/Admin/Dashboard/ChartData?days=${days}`)
            .then(res => res.json())
            .then(res => {
                if (!res.success) return;

                const labels = res.daily.map(x =>
                    new Date(x.date).toLocaleDateString('vi-VN')
                );

                const revenues = res.daily.map(x => x.revenue);

                const ctx = document.getElementById('salesChart').getContext('2d');

                if (salesChart) {
                    salesChart.destroy();
                }

                salesChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                           label: `Revenue (Delivered) - ${days} days`,
                            data: revenues,
                            backgroundColor: 'rgba(54, 162, 235, 0.7)',
                            borderRadius: 6
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: v => v.toLocaleString() + ' đ'
                                }
                            }
                        }
                    },
                     plugins: {
                            legend: {
                                display: true
                            }
                        }
                });
            })
            .catch(err => console.error(err));
    }

    function renderSalesChart(dailyData) {
        const ctx = document.getElementById('salesChart').getContext('2d');

        // Destroy existing chart
        if (salesChart) {
            salesChart.destroy();
        }

        const labels = dailyData.map(d => {
            const date = new Date(d.date);
            return date.toLocaleDateString('en-US', {
                month: 'short',
                day: 'numeric'
            });
        });

        const orderCounts = dailyData.map(d => d.count);
        const revenues = dailyData.map(d => d.revenue);

        salesChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Orders',
                        data: orderCounts,
                        borderColor: 'rgb(54, 162, 235)',
                        backgroundColor: 'rgba(54, 162, 235, 0.1)',
                        tension: 0.4,
                        yAxisID: 'y'
                    },
                    {
                        label: 'Revenue ($)',
                        data: revenues,
                        borderColor: 'rgb(75, 192, 192)',
                        backgroundColor: 'rgba(75, 192, 192, 0.1)',
                        tension: 0.4,
                        yAxisID: 'y1'
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                interaction: {
                    mode: 'index',
                    intersect: false
                },
                scales: {
                    y: {
                        type: 'linear',
                        display: true,
                        position: 'left',
                        title: {
                            display: true,
                            text: 'Orders'
                        }
                    },
                    y1: {
                        type: 'linear',
                        display: true,
                        position: 'right',
                        title: {
                            display: true,
                            text: 'Revenue ($)'
                        },
                        grid: {
                            drawOnChartArea: false
                        }
                    }
                }
            }
        });
    }

    function loadOrderStatusChart() {
        fetch('/Admin/Dashboard/OrderStatusSummary')
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // You can add a pie chart here if needed
                    console.log('Order status summary:', data.data);
                }
            });
    }

    // Auto-refresh stats every 30 seconds
    setInterval(() => {
        fetch('/Admin/Dashboard/Stats')
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    console.log('Dashboard stats refreshed:', data.data);
                }
            });
    }, 30000);
</script>

<style>
    .hover-shadow {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .hover-shadow:hover {
        transform: translateY(-2px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .list-group-item {
        border-left: none;
        border-right: none;
        padding: 1rem;
    }

    .list-group-item:first-child {
        border-top: none;
    }

    .list-group-item:last-child {
        border-bottom: none;
    }

    .table th {
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
</style>
}