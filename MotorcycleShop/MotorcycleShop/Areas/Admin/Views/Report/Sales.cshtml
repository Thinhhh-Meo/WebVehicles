@model MotorcycleShop.Areas.Admin.ViewModels.SalesReportViewModel

@{
    ViewData["Title"] = "Sales Report";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">Sales Report</h1>
        <p class="text-muted mb-0">Overview of delivered orders revenue</p>
    </div>
</div>

<!-- FILTER -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">From date</label>
                <input type="date"
                       name="startDate"
                       value="@(Model.StartDate?.ToString("yyyy-MM-dd"))"
                       class="form-control" />
            </div>

            <div class="col-md-4">
                <label class="form-label">To date</label>
                <input type="date"
                       name="endDate"
                       value="@(Model.EndDate?.ToString("yyyy-MM-dd"))"
                       class="form-control" />
            </div>

            <div class="col-md-3">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                    <option value="">All</option>
                    @foreach (OrderStatus s in Enum.GetValues(typeof(OrderStatus)))
                    {
                        <option value="@s"
                                selected="@(Model.SelectedStatus == s)">
                            @s
                        </option>
                    }
                </select>
            </div>

            <div class="col-md-4 d-flex align-items-end">
                <button class="btn btn-primary me-2">
                    <i class="fas fa-filter me-1"></i> Filter
                </button>
                <a asp-area="Admin"
                   asp-controller="Report"
                   asp-action="Sales"
                   class="btn btn-outline-secondary">
                    Reset
                </a>
            </div>
        </form>
    </div>
</div>

<!-- SUMMARY -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6 class="text-muted">Total Orders</h6>
                <h3>@Model.TotalOrders</h3>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6 class="text-muted">Total Revenue</h6>
                <h3 class="text-success">
                    @Model.TotalRevenue.ToString("N0") đ
                </h3>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6 class="text-muted">Average Order Value</h6>
                <h3>
                    @Model.AverageOrderValue.ToString("N0") đ
                </h3>
            </div>
        </div>
    </div>
</div>

<!-- TABLE -->
<div class="card">
    <div class="card-body">
        @if (Model.Orders.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Products</th>
                            <th>Total</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>
                                    <strong>#@order.OrderId</strong>
                                </td>

                                <td>
                                    <div>@order.User?.FullName</div>
                                    <small class="text-muted">@order.User?.Email</small>
                                </td>

                                <td>
                                    @order.OrderDate.ToString("dd/MM/yyyy HH:mm")
                                </td>

                                <!-- PRODUCTS -->
                                <td>
                                    <div class="small">
                                        @foreach (var item in order.OrderDetails)
                                        {
                                            <div>
                                                • @item.Product.Name
                                                <span class="text-muted">
                                                    x @item.Quantity
                                                </span>
                                            </div>
                                        }
                                    </div>
                                </td>

                                <td>
                                    <strong class="text-success">
                                        @order.FinalPrice.ToString("N0") đ
                                    </strong>
                                </td>

                                @{
                                    var statusClass = order.Status switch
                                    {
                                        OrderStatus.Delivered => "bg-success",
                                        OrderStatus.Shipping => "bg-primary",
                                        OrderStatus.Confirmed => "bg-info text-dark",
                                        OrderStatus.Pending => "bg-warning text-dark",
                                        OrderStatus.Cancelled => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }

                                <td>
                                    <span class="badge @statusClass">
                                        @order.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                <h5>No sales data found</h5>
                <p class="text-muted">No delivered orders in this time range</p>
            </div>
        }
    </div>
</div>
