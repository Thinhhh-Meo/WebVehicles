@model Product
@{
    ViewData["Title"] = "Edit Product";
    ViewData["Controller"] = "Product";
    ViewData["Action"] = "Edit";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Product: @Model.Name</h4>
            </div>
            <div class="card-body">
                <form asp-area="Admin" asp-controller="Product" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ProductId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <!-- Product Name -->
                        <div class="col-md-8 mb-3">
                            <label asp-for="Name" class="form-label">Product Name *</label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Product Type -->
                        <div class="col-md-4 mb-3">
                            <label asp-for="TypeProduct" class="form-label">Product Type *</label>
                            <select asp-for="TypeProduct" class="form-select" id="productType">
                                <option value="@ProductType.Motorcycle">Motorcycle</option>
                                <option value="@ProductType.SparePart">Spare Part</option>
                            </select>
                            <span asp-validation-for="TypeProduct" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <!-- Price -->
                        <div class="col-md-4 mb-3">
                            <label asp-for="Price" class="form-label">Price (VND) *</label>
                            <input asp-for="Price" type="number" step="1000" class="form-control">
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <!-- Quantity -->
                        <div class="col-md-4 mb-3">
                            <label asp-for="Quantity" class="form-label">Stock Quantity *</label>
                            <input asp-for="Quantity" type="number" class="form-control">
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>

                        <!-- Brand -->
                        <div class="col-md-4 mb-3">
                            <label asp-for="BrandId" class="form-label">Brand *</label>
                            <select asp-for="BrandId" class="form-select" asp-items="ViewBag.Brands">
                                <option value="">Select Brand</option>
                            </select>
                            <span asp-validation-for="BrandId" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Current Image -->
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mb-3">
                            <label class="form-label">Current Image</label>
                            <div class="d-flex align-items-center">
                                <img src="@Model.ImageUrl" alt="@Model.Name"
                                     style="width: 100px; height: 100px; object-fit: cover; border-radius: 5px;">
                                <div class="ms-3">
                                    <a href="@Model.ImageUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-external-link-alt me-1"></i>View
                                    </a>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- New Image Upload -->
                    <div class="mb-3">
                        <label class="form-label">Update Product Image</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*">
                        <div class="form-text">Leave empty to keep current image</div>
                    </div>

                    <!-- Status -->
                    <div class="mb-4">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch">
                            <label asp-for="IsActive" class="form-check-label">Active Product</label>
                        </div>
                    </div>

                    <!-- Product Statistics -->
                    <div class="card bg-light mb-4">
                        <div class="card-body py-3">
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="h5 mb-1">@(Model.Feedbacks?.Count ?? 0)</div>
                                    <div class="text-muted small">Feedbacks</div>
                                </div>
                                <div class="col-4">
                                    <div class="h5 mb-1">@(Model.OrderDetails?.Count ?? 0)</div>
                                    <div class="text-muted small">Orders</div>
                                </div>
                                <div class="col-4">
                                    <div class="h5 mb-1">@Model.CreatedDate.ToString("yyyy-MM-dd")</div>
                                    <div class="text-muted small">Created</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="d-flex justify-content-between mt-4">
                        <div>
                            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="button" class="btn btn-outline-danger"
                                    onclick="confirmDelete('Are you sure you want to delete this product?', 'deleteForm')">
                                <i class="fas fa-trash me-2"></i>Delete
                            </button>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Delete Form (hidden) -->
                <form id="deleteForm" method="post" asp-action="Delete" asp-route-id="@Model.ProductId" style="display: none;"></form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show specific fields based on current product type
        document.addEventListener('DOMContentLoaded', function() {
            const type = '@Model.TypeProduct';
            if (type === '@ProductType.Motorcycle') {
                // Show motorcycle fields
            } else if (type === '@ProductType.SparePart') {
                // Show spare part fields
            }
        });

        // Image preview for new upload
        document.querySelector('input[name="imageFile"]')?.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    // Create preview if it doesn't exist
                    let preview = document.getElementById('newImagePreview');
                    if (!preview) {
                        preview = document.createElement('div');
                        preview.id = 'newImagePreview';
                        preview.className = 'mt-3';
                        this.parentNode.appendChild(preview);
                    }

                    preview.innerHTML = `
                        <label class="form-label">New Image Preview</label>
                        <div class="border rounded p-3 text-center bg-white">
                            <img src="${e.target.result}" alt="New image preview"
                                 style="max-width: 200px; max-height: 200px; object-fit: contain;">
                            <div class="mt-2 small text-muted">${file.name}</div>
                        </div>
                    `;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>

    <!-- jQuery Validation -->
    <partial name="_ValidationScriptsPartial" />
}