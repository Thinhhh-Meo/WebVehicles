@model PaginatedList<Product>
@{
    ViewData["Title"] = "Product Management";
    ViewData["Controller"] = "Product";
    ViewData["Action"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">Product Management</h1>
        <p class="text-muted mb-0">Manage all products in the store</p>
    </div>
    <div>
        <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add New Product
        </a>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <input type="text" name="search" class="form-control" placeholder="Search products..."
                       value="@ViewBag.Search">
            </div>
            <div class="col-md-3">
                <select name="type" class="form-select">
                    <option value="">All Types</option>
                    <option value="Motorcycle" selected="@(ViewBag.Type == "Motorcycle")">Motorcycle</option>
                    <option value="SparePart" selected="@(ViewBag.Type == "SparePart")">Spare Part</option>
                </select>
            </div>
            <div class="col-md-3">
                <select name="brand" class="form-select">
                    <option value="">All Brands</option>
                    @if (ViewBag.Brands != null)
                    {
                        foreach (var brand in ViewBag.Brands)
                        {
                            <option value="@brand" selected="@(ViewBag.BrandFilter == brand)">@brand</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-2"></i>Filter
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Products Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover data-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Brand</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.ProductId</td>
                                <td>
                                    <img src="@product.ImageUrl" alt="@product.Name"
                                         style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;">
                                </td>
                                <td>
                                    <strong>@product.Name</strong>
                                    @if (!string.IsNullOrEmpty(product.Description))
                                    {
                                        <div class="text-muted small">@product.Description.Substring(0, Math.Min(50, product.Description.Length))...</div>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@(product.TypeProduct == ProductType.Motorcycle ? "primary" : "info")">
                                        @product.TypeProduct
                                    </span>
                                </td>
                                <td>@product.BrandName</td>
                                <td>@string.Format("{0:N0}", product.Price) đ</td>
                                <td>
                                    <span class="@(product.Quantity <= 5 ? "text-danger fw-bold" : "")">
                                        @product.Quantity
                                    </span>
                                </td>
                                <td>
                                    <label class="switch">
                                        <input type="checkbox" @(product.IsActive ? "checked" : "")
                                               onchange="toggleStatus('@Url.Action("ToggleStatus", "Product")', @product.ProductId, this.checked)">
                                        <span class="slider"></span>
                                    </label>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-area="Admin" asp-controller="Product" asp-action="Details"
                                           asp-route-id="@product.ProductId" class="btn btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-area="Admin" asp-controller="Product" asp-action="Edit"
                                           asp-route-id="@product.ProductId" class="btn btn-outline-success">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger"
                                                onclick="confirmDelete('Are you sure you want to delete this product?', 'deleteForm-@product.ProductId')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                        <form id="deleteForm-@product.ProductId"
                                              asp-action="Delete" asp-route-id="@product.ProductId"
                                              method="post" style="display: none;">
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.PageIndex - 1, search = ViewBag.Search, type = ViewBag.Type, brand = ViewBag.BrandFilter })">
                                <i class="fas fa-chevron-left me-1"></i>Previous
                            </a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i, search = ViewBag.Search, type = ViewBag.Type, brand = ViewBag.BrandFilter })">
                                @i
                            </a>
                        </li>
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.PageIndex + 1, search = ViewBag.Search, type = ViewBag.Type, brand = ViewBag.BrandFilter })">
                                Next<i class="fas fa-chevron-right ms-1"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-box-open fa-3x text-muted"></i>
                </div>
                <h4 class="text-muted">No products found</h4>
                <p class="text-muted mb-4">Get started by adding your first product</p>
                <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Product
                </a>
            </div>
        }
    </div>
</div>