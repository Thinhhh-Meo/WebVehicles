@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    bool isAdminLogin = ViewData["IsAdminLogin"] as bool? ?? false;
}

<div class="login-wrapper">
    <div class="login-card shadow-lg">

        <!-- LEFT: Branding -->
        <div class="login-left d-none d-md-flex">
            <div class="overlay"></div>
            <div class="brand-content">
                <h1>MOTORBIKE SHOP</h1>
                <p>Power. Speed. Freedom.</p>
                @if (isAdminLogin)
                {
                    <div class="admin-badge mt-3">
                        <i class="bi bi-shield-lock"></i> ADMINISTRATOR ACCESS
                    </div>
                }
            </div>
        </div>

        <!-- RIGHT: FORM -->
        <div class="login-right">
            <div class="form-container">

              

                @if (isAdminLogin)
                {
                    <div class="text-center mb-3">
                        <h4 class="fw-bold text-danger">
                            <i class="bi bi-shield-check"></i> Admin Portal
                        </h4>
                        <p class="text-muted small">System Administrator Access Only</p>
                    </div>
                }
                else
                {
                    <h2 class="fw-bold mb-2">Welcome Back</h2>
                    <p class="text-muted mb-4">Login to your account</p>
                }

                <form method="post" asp-route-admin="@isAdminLogin">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Hidden field to preserve admin flag -->
                    <input type="hidden" name="admin" value="@isAdminLogin.ToString().ToLower()" />

                    <!-- Email -->
                    <div class="input-group mb-3">
                        <span class="input-group-text @(isAdminLogin ? "bg-danger" : "bg-dark")">
                            <i class="bi @(isAdminLogin ? "bi-person-badge" : "bi-envelope-fill")"></i>
                        </span>
                        <input asp-for="Input.Email"
                               class="form-control"
                               placeholder="@(isAdminLogin ? "Admin Email" : "Email address")"
                               autocomplete="username" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>

                    <!-- Password -->
                    <div class="input-group mb-3">
                        <span class="input-group-text @(isAdminLogin ? "bg-danger" : "bg-dark")">
                            <i class="bi bi-lock-fill"></i>
                        </span>
                        <input asp-for="Input.Password"
                               type="password"
                               class="form-control"
                               placeholder="Password"
                               autocomplete="current-password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>

                    <!-- Remember -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                Remember me
                            </label>
                        </div>
                        @if (!isAdminLogin)
                        {
                            <a asp-page="./ForgotPassword" class="link-danger small">
                                Forgot password?
                            </a>
                        }
                    </div>

                    <!-- Login Button -->
                    <button type="submit" class="btn w-100 mb-3 @(isAdminLogin ? "btn-danger" : "btn-login")">
                        @if (isAdminLogin)
                        {
                            <i class="bi bi-shield-check"></i>
                            <text>LOGIN AS ADMIN</text>
                        }
                        else
                        {
                            <text>LOGIN</text>
                        }
                    </button>

                    <!-- Test Credentials for Admin -->
                    @if (isAdminLogin)
                    {
                        <div class="test-credentials alert alert-info mt-3">
                            <h6><i class="bi bi-info-circle"></i> Test Credentials:</h6>
                            <p class="mb-1"><strong>Email:</strong> admin@motorshop.com</p>
                            <p class="mb-0"><strong>Password:</strong> Admin@123</p>
                        </div>
                    }

                    <!-- Register (only for user login) -->
                    @if (!isAdminLogin)
                    {
                        <p class="text-center text-muted">
                            Don't have an account?
                            <a asp-page="./Register"
                               asp-route-returnUrl="@Model.ReturnUrl"
                               class="fw-semibold link-danger">
                                Register
                            </a>
                        </p>
                    }
                </form>

                <!-- External login (only for user) -->
                @if (!isAdminLogin && (Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="divider">OR</div>

                    <form asp-page="./ExternalLogin"
                          asp-route-returnUrl="@Model.ReturnUrl"
                          method="post"
                          class="d-flex gap-2 justify-content-center">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit"
                                    class="btn btn-outline-dark"
                                    name="provider"
                                    value="@provider.Name">
                                <i class="bi bi-box-arrow-in-right me-1"></i>
                                @provider.DisplayName
                            </button>
                        }
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- BOOTSTRAP ICONS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<style>
    /* Background */
    body {
        background: radial-gradient(circle at top, #1a1a1a, #000);
        min-height: 100vh;
    }

    /* Wrapper */
    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    /* Card */
    .login-card {
        display: flex;
        width: 900px;
        max-width: 95%;
        border-radius: 18px;
        overflow: hidden;
        background: #fff;
        animation: fadeIn 0.8s ease;
    }

    /* LEFT */
    .login-left {
        width: 50%;
        background: url("https://images.unsplash.com/photo-1503376780353-7e6692767b70") center/cover no-repeat;
        position: relative;
    }

        .login-left .overlay {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.6);
        }

    .brand-content {
        position: relative;
        z-index: 1;
        color: #fff;
        padding: 40px;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }

        .brand-content h1 {
            font-weight: 800;
            letter-spacing: 2px;
        }

        .brand-content p {
            color: #ddd;
        }

    .admin-badge {
        background: rgba(220, 53, 69, 0.8);
        color: white;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: bold;
        display: inline-block;
        margin-top: 10px;
    }

    /* RIGHT */
    .login-right {
        width: 50%;
        padding: 50px 40px;
    }

    .form-container {
        max-width: 360px;
        margin: auto;
    }

    /* Login Type Selector */
    .login-type-selector .btn-group .btn {
        border-radius: 10px !important;
        padding: 10px 0;
        font-weight: 600;
    }

    /* Test Credentials */
    .test-credentials {
        background: #e7f3ff;
        border-left: 4px solid #0d6efd;
        padding: 15px;
        border-radius: 8px;
        font-size: 14px;
    }

        .test-credentials h6 {
            color: #0d6efd;
            margin-bottom: 10px;
        }

    /* Inputs */
    .input-group-text {
        background: #000;
        color: #fff;
        border: none;
    }

    .form-control {
        border-left: none;
    }

        .form-control:focus {
            box-shadow: none;
            border-color: #000;
        }

    /* Button */
    .btn-login {
        background: linear-gradient(135deg, #000, #c00000);
        color: #fff;
        font-weight: 700;
        letter-spacing: 1px;
        padding: 12px;
        border: none;
        transition: 0.3s;
    }

        .btn-login:hover {
            background: linear-gradient(135deg, #c00000, #000);
            transform: translateY(-2px);
        }

    /* Divider */
    .divider {
        text-align: center;
        margin: 25px 0;
        font-size: 13px;
        color: #aaa;
        position: relative;
    }

        .divider::before,
        .divider::after {
            content: "";
            position: absolute;
            top: 50%;
            width: 40%;
            height: 1px;
            background: #ddd;
        }

        .divider::before {
            left: 0;
        }

        .divider::after {
            right: 0;
        }

    /* Animation */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Mobile */
    @@media (max-width: 768px) {
        .login-card {
            flex-direction: column;
        }

        .login-right {
            width: 100%;
        }
    }
</style>