@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset";
}

<div class="overlay"></div>

<div class="popup-card text-center animate-fade-in">
    <div class="mb-3">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 70px;"></i>
    </div>
    <h2 class="fw-bold mb-3">Password Reset Successful</h2>
    <p class="text-muted mb-4">
        Your password has been updated. You can now log in with your new password.
    </p>
    <a asp-page="./Login" class="btn btn-gradient fw-bold">
        Login
    </a>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: #1a1a1a;
            height: 100vh;
            overflow: hidden;
        }

        .overlay {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.7);
            z-index: 1;
        }

        .popup-card {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: #fff;
            padding: 40px 30px;
            border-radius: 20px;
            max-width: 400px;
            width: 90%;
            z-index: 2;
            box-shadow: 0 10px 40px rgba(0,0,0,0.5);
        }

        .btn-gradient {
            display: inline-block;
            width: 100%;
            padding: 12px;
            border-radius: 12px;
            background: linear-gradient(135deg, #c00000, #000);
            color: #fff;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .btn-gradient:hover {
                background: linear-gradient(135deg, #ff0000, #333);
                transform: translateY(-2px);
            }

        /* Fade-in animation */
        @@keyframes fadeInScale {
            0%

        {
            opacity: 0;
            transform: translate(-50%, -50%) scale(0.7);
        }

        100% {
            opacity: 1;
            transform: translate(-50%, -50%) scale(1);
        }

        }

        .animate-fade-in {
            animation: fadeInScale 0.6s ease-out forwards;
        }

        @@media (max-width: 576px) {
            .popup-card

        {
            padding: 30px 20px;
        }

        }
    </style>
}
